@model Domain.Entities.Cartdetail

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>

<div class="container mt-4">
    <h2>Delete Cart Detail</h2>
    <h4>Are you sure you want to delete this cart detail?</h4>
    <div>
        <h5>Cart Detail ID: @Model.CartDetailId</h5>
        <p>Cart ID: @Model.CartId</p>
        <p>Game: @Model.Game.Title</p>
        <p>Quantity: @Model.Quantity</p>
        <p>Price: @Model.Price</p>
        <p>Discount: @Model.Discount</p>
    </div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CartDetailId" />
        <div>
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
