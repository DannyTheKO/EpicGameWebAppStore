@model Domain.Entities.Cart

<head>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"/>
</head>

<div class="container mt-4">
	<h2>Delete Cart</h2>
	<h4>Are you sure you want to delete this cart?</h4>
	<div>
		<h5>Cart ID: @Model.CartId</h5>
		<p>Account: @Model.Account.Username</p>
		<p>Total Amount: @Model.TotalAmount</p>
		<p>Created On: @Model.CreatedOn</p>
	</div>
	<form asp-action="Delete" method="post">
		<input type="hidden" asp-for="CartId"/>
		<div>
			<input type="submit" value="Delete" class="btn btn-danger"/>
			<a asp-action="Index" class="btn btn-secondary">Cancel</a>
		</div>
	</form>
</div>