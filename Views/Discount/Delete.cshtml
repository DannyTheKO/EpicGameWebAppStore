@model Domain.Entities.Discount

<head>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"/>
</head>

<div class="container mt-4">
	<h2>Delete Discount</h2>
	<h4>Are you sure you want to delete this discount?</h4>
	<div>
		<h5>Discount ID: @Model.DiscountId</h5>
		<p>Game: @(Model.Game?.Title ?? "N/A")</p>
		<p>Percent: @Model.Percent%</p>
		<p>Code: @Model.Code</p>
		<p>Start Date: @Model.StartOn?.ToShortDateString()</p>
		<p>End Date: @Model.EndOn?.ToShortDateString()</p>
	</div>
	<form asp-action="Delete" method="post">
		<input type="hidden" asp-for="DiscountId"/>
		<div>
			<input type="submit" value="Delete" class="btn btn-danger"/>
			<a asp-action="Index" class="btn btn-secondary">Cancel</a>
		</div>
	</form>
</div>