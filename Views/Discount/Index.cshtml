@model IEnumerable<Domain.Entities.Discount>

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>

<h1 class="mt-4">Discount List</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Discount</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Discount ID</th>
            <th>Game</th>
            <th>Percent</th>
            <th>Code</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DiscountId</td>
                <td>@(item.Game?.Title ?? "N/A")</td>
                <td>@item.Percent%</td>
                <td>@item.Code</td>
                <td>@item.StartOn?.ToShortDateString()</td>
                <td>@item.EndOn?.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DiscountId" class="btn btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.DiscountId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
